 void dfs(vector<vector<int>>& g, int cur, vector<int>& color){
 	for(auto to : g[cur]){
 		if(color[to] != -1) continue;
 		color[to] = color[cur] ^ 1;
 		dfs(g, to, color);
 	}
 }
 
